import React, { useState } from 'react';
import { Dialog, DialogContent, DialogHeader, DialogTitle } from "@/components/ui/dialog";
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { Label } from "@/components/ui/label";
import { Textarea } from "@/components/ui/textarea";
import { Select, SelectContent, SelectItem, SelectTrigger, SelectValue } from "@/components/ui/select";
import { Calendar } from "@/components/ui/calendar";
import { Popover, PopoverContent, PopoverTrigger } from "@/components/ui/popover";
import { Switch } from "@/components/ui/switch";
import { CalendarIcon, Loader2, Bell } from "lucide-react";
import { format, addDays } from "date-fns";
import { base44 } from "@/api/base44Client";

const serviceTypes = [
  { value: "oil_change", label: "Oil Change" },
  { value: "tire_rotation", label: "Tire Rotation" },
  { value: "tire_replacement", label: "Tire Replacement" },
  { value: "brake_service", label: "Brake Service" },
  { value: "battery_replacement", label: "Battery Replacement" },
  { value: "transmission_service", label: "Transmission Service" },
  { value: "inspection", label: "Inspection" },
  { value: "diagnostic", label: "Diagnostic" },
  { value: "general_maintenance", label: "General Maintenance" },
  { value: "custom", label: "Custom Service" }
];

const timeSlots = [];
for (let hour = 8; hour <= 17; hour++) {
  for (let min = 0; min < 60; min += 30) {
    const time = `${hour.toString().padStart(2, '0')}:${min.toString().padStart(2, '0')}`;
    timeSlots.push(time);
  }
}

export default function ScheduleAppointmentDialog({ open, onClose, mechanicId, assignments = [], vehicles = [], onSave }) {
  const [saving, setSaving] = useState(false);
  const [formData, setFormData] = useState({
    vehicle_id: "",
    appointment_date: addDays(new Date(), 1),
    start_time: "09:00",
    end_time: "10:00",
    service_type: "",
    service_description: "",
    notes: "",
    send_reminder: true,
    estimated_duration_hours: 1
  });

  const selectedVehicle = vehicles.find(v => v.id === formData.vehicle_id);
  const selectedAssignment = assignments.find(a => a.vehicle_id === formData.vehicle_id);

  const handleSubmit = async () => {
    if (!formData.vehicle_id || !formData.service_type) return;
    
    setSaving(true);
    
    const appointmentData = {
      vehicle_id: formData.vehicle_id,
      mechanic_id: mechanicId,
      customer_id: selectedAssignment.owner_id,
      customer_email: selectedAssignment.owner_email,
      customer_name: selectedAssignment.owner_email.split('@')[0],
      appointment_date: format(formData.appointment_date, 'yyyy-MM-dd'),
      start_time: formData.start_time,
      end_time: formData.end_time,
      service_type: formData.service_type,
      service_description: formData.service_description,
      notes: formData.notes,
      status: 'scheduled',
      estimated_duration_hours: formData.estimated_duration_hours
    };
    
    await onSave(appointmentData);
    
    // Send confirmation email to customer
    if (formData.send_reminder && selectedAssignment?.owner_email) {
      try {
        await base44.integrations.Core.SendEmail({
          to: selectedAssignment.owner_email,
          subject: `Service Appointment Scheduled - ${format(formData.appointment_date, 'MMMM d, yyyy')}`,
          body: `Hello,

Your service appointment has been scheduled:

Vehicle: ${selectedVehicle?.year} ${selectedVehicle?.make} ${selectedVehicle?.model}
Date: ${format(formData.appointment_date, 'EEEE, MMMM d, yyyy')}
Time: ${formData.start_time}
Service: ${serviceTypes.find(s => s.value === formData.service_type)?.label}

${formData.service_description ? `Details: ${formData.service_description}` : ''}

Please arrive on time. If you need to reschedule, please contact us as soon as possible.

Thank you!`
        });
      } catch (e) {
        console.error('Failed to send confirmation:', e);
      }
    }
    
    setSaving(false);
    onClose();
    
    setFormData({
      vehicle_id: "",
      appointment_date: addDays(new Date(), 1),
      start_time: "09:00",
      end_time: "10:00",
      service_type: "",
      service_description: "",
      notes: "",
      send_reminder: true,
      estimated_duration_hours: 1
    });
  };

  return (
    <Dialog open={open} onOpenChange={onClose}>
      <DialogContent className="max-w-lg max-h-[90vh] overflow-y-auto">
        <DialogHeader>
          <DialogTitle>Schedule Appointment</DialogTitle>
        </DialogHeader>

        <div className="space-y-4 py-4">
          <div className="space-y-2">
            <Label>Select Vehicle *</Label>
            <Select value={formData.vehicle_id} onValueChange={(value) => setFormData({...formData, vehicle_id: value})}>
              <SelectTrigger>
                <SelectValue placeholder="Choose customer vehicle" />
              </SelectTrigger>
              <SelectContent>
                {vehicles.map(vehicle => {
                  const assignment = assignments.find(a => a.vehicle_id === vehicle.id);
                  return (
                    <SelectItem key={vehicle.id} value={vehicle.id}>
                      {vehicle.year} {vehicle.make} {vehicle.model} - {assignment?.owner_email}
                    </SelectItem>
                  );
                })}
              </SelectContent>
            </Select>
          </div>

          <div className="grid grid-cols-2 gap-4">
            <div className="space-y-2">
              <Label>Date *</Label>
              <Popover>
                <PopoverTrigger asChild>
                  <Button variant="outline" className="w-full justify-start text-left font-normal">
                    <CalendarIcon className="mr-2 h-4 w-4" />
                    {format(formData.appointment_date, "MMM d, yyyy")}
                  </Button>
                </PopoverTrigger>
                <PopoverContent className="w-auto p-0">
                  <Calendar
                    mode="single"
                    selected={formData.appointment_date}
                    onSelect={(date) => date && setFormData({...formData, appointment_date: date})}
                    disabled={(date) => date < new Date()}
                  />
                </PopoverContent>
              </Popover>
            </div>

            <div className="space-y-2">
              <Label>Duration (hours)</Label>
              <Input
                type="number"
                step="0.5"
                min="0.5"
                max="8"
                value={formData.estimated_duration_hours}
                onChange={(e) => setFormData({...formData, estimated_duration_hours: Number(e.target.value)})}
              />
            </div>
          </div>

          <div className="grid grid-cols-2 gap-4">
            <div className="space-y-2">
              <Label>Start Time *</Label>
              <Select value={formData.start_time} onValueChange={(value) => setFormData({...formData, start_time: value})}>
                <SelectTrigger>
                  <SelectValue />
                </SelectTrigger>
                <SelectContent>
                  {timeSlots.map(time => (
                    <SelectItem key={time} value={time}>{time}</SelectItem>
                  ))}
                </SelectContent>
              </Select>
            </div>

            <div className="space-y-2">
              <Label>End Time *</Label>
              <Select value={formData.end_time} onValueChange={(value) => setFormData({...formData, end_time: value})}>
                <SelectTrigger>
                  <SelectValue />
                </SelectTrigger>
                <SelectContent>
                  {timeSlots.map(time => (
                    <SelectItem key={time} value={time}>{time}</SelectItem>
                  ))}
                </SelectContent>
              </Select>
            </div>
          </div>

          <div className="space-y-2">
            <Label>Service Type *</Label>
            <Select value={formData.service_type} onValueChange={(value) => setFormData({...formData, service_type: value})}>
              <SelectTrigger>
                <SelectValue placeholder="Select service type" />
              </SelectTrigger>
              <SelectContent>
                {serviceTypes.map(type => (
                  <SelectItem key={type.value} value={type.value}>{type.label}</SelectItem>
                ))}
              </SelectContent>
            </Select>
          </div>

          <div className="space-y-2">
            <Label>Service Description</Label>
            <Textarea
              placeholder="Details about the service needed..."
              value={formData.service_description}
              onChange={(e) => setFormData({...formData, service_description: e.target.value})}
              rows={3}
            />
          </div>

          <div className="space-y-2">
            <Label>Internal Notes</Label>
            <Textarea
              placeholder="Notes for your reference..."
              value={formData.notes}
              onChange={(e) => setFormData({...formData, notes: e.target.value})}
              rows={2}
            />
          </div>

          <div className="flex items-center justify-between py-2 bg-blue-50 rounded-lg px-3 border border-blue-200">
            <div className="flex items-center gap-2">
              <Bell className="w-4 h-4 text-blue-600" />
              <Label className="text-sm">Send confirmation email to customer</Label>
            </div>
            <Switch
              checked={formData.send_reminder}
              onCheckedChange={(checked) => setFormData({...formData, send_reminder: checked})}
            />
          </div>
        </div>

        <div className="flex justify-end gap-3">
          <Button variant="outline" onClick={onClose}>Cancel</Button>
          <Button 
            onClick={handleSubmit}
            disabled={!formData.vehicle_id || !formData.service_type || saving}
            className="bg-orange-600 hover:bg-orange-700"
          >
            {saving ? (
              <>
                <Loader2 className="w-4 h-4 mr-2 animate-spin" />
                Scheduling...
              </>
            ) : (
              "Schedule Appointment"
            )}
          </Button>
        </div>
      </DialogContent>
    </Dialog>
  );
}