import React, { useState } from 'react';
import { Dialog, DialogContent, DialogHeader, DialogTitle } from "@/components/ui/dialog";
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { Label } from "@/components/ui/label";
import { Textarea } from "@/components/ui/textarea";
import { Select, SelectContent, SelectItem, SelectTrigger, SelectValue } from "@/components/ui/select";
import { Calendar } from "@/components/ui/calendar";
import { Popover, PopoverContent, PopoverTrigger } from "@/components/ui/popover";
import { Switch } from "@/components/ui/switch";
import { CalendarIcon, Loader2 } from "lucide-react";
import { format, addMonths } from "date-fns";

const serviceTypes = [
  { value: "oil_change", label: "Oil Change" },
  { value: "tire_rotation", label: "Tire Rotation" },
  { value: "tire_replacement", label: "Tire Replacement" },
  { value: "brake_service", label: "Brake Service" },
  { value: "battery_replacement", label: "Battery Replacement" },
  { value: "transmission_service", label: "Transmission Service" },
  { value: "coolant_flush", label: "Coolant Flush" },
  { value: "air_filter", label: "Air Filter" },
  { value: "spark_plugs", label: "Spark Plugs" },
  { value: "belt_replacement", label: "Belt Replacement" },
  { value: "inspection", label: "Inspection" },
  { value: "registration", label: "Registration" },
  { value: "insurance", label: "Insurance" },
  { value: "custom", label: "Custom" }
];

export default function AddReminderDialog({ open, onClose, vehicleId, onSave, userTier = 'free' }) {
  const [formData, setFormData] = useState({
    service_type: "",
    custom_title: "",
    next_due_date: addMonths(new Date(), 3),
    next_due_mileage: "",
    is_recurring: false,
    is_hybrid: false,
    interval_months: "",
    interval_miles: "",
    notes: ""
  });
  const [saving, setSaving] = useState(false);

  const handleSubmit = async () => {
    if (!formData.service_type) return;
    
    // Free tier: only basic reminders
    if (userTier === 'free' && formData.service_type === 'custom') {
      alert('Custom reminders are a premium feature. Upgrade to create custom reminders.');
      return;
    }
    
    setSaving(true);
    
    const reminderData = {
      vehicle_id: vehicleId,
      service_type: formData.service_type,
      custom_title: formData.custom_title || undefined,
      next_due_date: format(formData.next_due_date, "yyyy-MM-dd"),
      next_due_mileage: formData.next_due_mileage ? Number(formData.next_due_mileage) : undefined,
      is_recurring: formData.is_recurring,
      is_hybrid: formData.is_hybrid,
      interval_months: formData.interval_months ? Number(formData.interval_months) : undefined,
      interval_miles: formData.interval_miles ? Number(formData.interval_miles) : undefined,
      notes: formData.notes || undefined,
      created_by_user: true,
      status: "pending"
    };
    
    await onSave(reminderData);
    setSaving(false);
    onClose();
    setFormData({
      service_type: "",
      custom_title: "",
      next_due_date: addMonths(new Date(), 3),
      next_due_mileage: "",
      is_recurring: false,
      is_hybrid: false,
      interval_months: "",
      interval_miles: "",
      notes: ""
    });
  };

  return (
    <Dialog open={open} onOpenChange={onClose}>
      <DialogContent className="max-w-lg max-h-[90vh] overflow-y-auto">
        <DialogHeader>
          <DialogTitle>Add Reminder</DialogTitle>
        </DialogHeader>
        
        <div className="space-y-4 py-4">
          <div className="space-y-2">
            <Label>Service Type *</Label>
            <Select 
              value={formData.service_type} 
              onValueChange={(value) => setFormData({...formData, service_type: value})}
            >
              <SelectTrigger>
                <SelectValue placeholder="Select service type" />
              </SelectTrigger>
              <SelectContent>
                {serviceTypes.map(type => (
                  <SelectItem key={type.value} value={type.value}>
                    {type.label}
                  </SelectItem>
                ))}
              </SelectContent>
            </Select>
          </div>

          {formData.service_type === "custom" && (
            <div className="space-y-2">
              <Label>Custom Title *</Label>
              <Input
                placeholder="e.g., Check brake fluid"
                value={formData.custom_title}
                onChange={(e) => setFormData({...formData, custom_title: e.target.value})}
              />
            </div>
          )}

          <div className="grid grid-cols-2 gap-4">
            <div className="space-y-2">
              <Label>Next Due Date</Label>
              <Popover>
                <PopoverTrigger asChild>
                  <Button variant="outline" className="w-full justify-start text-left font-normal">
                    <CalendarIcon className="mr-2 h-4 w-4" />
                    {format(formData.next_due_date, "MMM d, yyyy")}
                  </Button>
                </PopoverTrigger>
                <PopoverContent className="w-auto p-0">
                  <Calendar
                    mode="single"
                    selected={formData.next_due_date}
                    onSelect={(date) => date && setFormData({...formData, next_due_date: date})}
                  />
                </PopoverContent>
              </Popover>
            </div>

            <div className="space-y-2">
              <Label>Next Due Mileage</Label>
              <Input
                type="number"
                placeholder="e.g., 50000"
                value={formData.next_due_mileage}
                onChange={(e) => setFormData({...formData, next_due_mileage: e.target.value})}
              />
            </div>
          </div>

          <div className="flex items-center justify-between py-2">
            <div>
              <Label>Recurring Reminder</Label>
              <p className="text-sm text-slate-500">Automatically create new reminder when completed</p>
            </div>
            <Switch
              checked={formData.is_recurring}
              onCheckedChange={(checked) => setFormData({...formData, is_recurring: checked})}
            />
          </div>

          {formData.is_recurring && (
            <div className="space-y-3 p-4 bg-slate-50 rounded-xl">
              <div className="grid grid-cols-2 gap-4">
                <div className="space-y-2">
                  <Label>Every X months</Label>
                  <Input
                    type="number"
                    placeholder="e.g., 6"
                    value={formData.interval_months}
                    onChange={(e) => setFormData({...formData, interval_months: e.target.value})}
                  />
                </div>
                <div className="space-y-2">
                  <Label>Every X miles</Label>
                  <Input
                    type="number"
                    placeholder="e.g., 5000"
                    value={formData.interval_miles}
                    onChange={(e) => setFormData({...formData, interval_miles: e.target.value})}
                  />
                </div>
              </div>

              {userTier === 'paid' && formData.interval_months && formData.interval_miles && (
                <div className="flex items-center gap-2">
                  <input
                    type="checkbox"
                    id="hybrid"
                    checked={formData.is_hybrid}
                    onChange={(e) => setFormData({...formData, is_hybrid: e.target.checked})}
                    className="rounded"
                  />
                  <Label htmlFor="hybrid" className="text-sm cursor-pointer">
                    Trigger on whichever comes first (Hybrid)
                  </Label>
                </div>
              )}
            </div>
          )}

          <div className="space-y-2">
            <Label>Notes</Label>
            <Textarea
              placeholder="Add any additional notes..."
              value={formData.notes}
              onChange={(e) => setFormData({...formData, notes: e.target.value})}
              rows={2}
            />
          </div>
        </div>

        <div className="flex justify-end gap-3">
          <Button variant="outline" onClick={onClose}>Cancel</Button>
          <Button 
            onClick={handleSubmit} 
            disabled={!formData.service_type || (formData.service_type === "custom" && !formData.custom_title) || saving}
            className="bg-blue-600 hover:bg-blue-700"
          >
            {saving ? (
              <>
                <Loader2 className="w-4 h-4 mr-2 animate-spin" />
                Saving...
              </>
            ) : (
              "Add Reminder"
            )}
          </Button>
        </div>
      </DialogContent>
    </Dialog>
  );
}